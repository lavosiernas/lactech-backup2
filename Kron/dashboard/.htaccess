# KRON Dashboard - Rewrite Rules

# Redirecionar /dashboard para /dashboard/index.php
RewriteEngine On
RewriteBase /dashboard/

# Se acessar /dashboard sem arquivo, redirecionar para index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^$ index.php [L]

# Proteger arquivos sens√≠veis
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>
